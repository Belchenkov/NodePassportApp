<%- include('includes/header') %>

<div class="container reg-page">
    <% if (locals.errors) { %>
    <% errors.forEach(function (error) { %>
    <div class="alert alert-danger">
        <%= error.msg %>
    </div>
    <%}) %>
    <% }%>
    <div class="col-md-4 col-md-offset-4">

        <form class="form-signin" method="post" action="/users/register">
            <h2 class="form-signin-heading text-center">Регистрация</h2>
            <label class="sr-only">Имя</label>
            <input type="text" name="name" value="<%= (!!locals.name) ? name: '' %>"
                   class="form-control" placeholder="Имя" required autofocus>
            <br />

            <label class="sr-only">Логин</label>
            <input type="text" name="username" value="<%= (!!locals.username) ? username: '' %>" class="form-control" placeholder="Логин" required autofocus>
            <br />

            <label for="inputEmail" class="sr-only">Email</label>
            <input type="email" id="inputEmail" name="email" value="<%= (!!locals.email) ? email: '' %>" class="form-control" placeholder="Email" required autofocus>
            <br />

            <label class="sr-only">Пароль</label>
            <input type="password" name="password" class="form-control"
                   value="<%= (!!locals.password) ? password: '' %>" placeholder="Пароль" required>
            <br />

            <label class="sr-only">Подтвердить пароль</label>
            <input type="password" name="password2" class="form-control"
                   value="<%= (!!locals.password2) ? password2: '' %>" placeholder="Подтвердить пароль" required>
            <br />

            <p>Есть аккаунт? <a href="/users/login">Войти</a></p>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Зарегистрироваться</button>
        </form>
    </div>

</div> <!-- /container -->


<%- include('includes/footer') %>